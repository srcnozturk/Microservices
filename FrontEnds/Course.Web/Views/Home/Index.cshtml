@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}
@model List<CourseViewModel>
<h2>Kurslar</h2>
<hr/>
@if(Model.Any())
{
    @foreach (var item in Model)
    {
        count++;
        if(count==1 || (count%3==1))
        {
            @Html.Raw("<div class='row row - cols - 1 row - cols - md - 3 g - 4'>")
        }
    }
}
